@model Lib.ViewModels.LoginModel
<h2>Вхід</h2>

<a asp-action="Register" asp-controller="Account">Реєстрація</a>

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>

    <div>

        <div  >
            <label asp-for="Email">Ваш Email:</label><br />
            <input type="text" asp-for="Email" class="box" required/><br />
            <span asp-validation-for="Email" />
        </div><br />

        <div >
            <label asp-for="Password">Ваш пароль:</label><br />
            <input asp-for="Password" class="box" required /><br />
            <span asp-validation-for="Password" />
        </div><br />

        <div>
            <input type="submit" value="Вхід" class="box" />
        </div>

    </div>
</form>