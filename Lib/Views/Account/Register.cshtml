@model Lib.ViewModels.RegisterModel

<h2>Реєстрація</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>

      
        <div>
            <label asp-for="Email">Введіть Email</label><br />
            <input type="text" asp-for="Email" required />
            <span asp-validation-for="Email" />
        </div>

        <div>
            <label asp-for="Password">Введіть пароль</label><br />
            <input asp-for="Password"  required />
            <span asp-validation-for="Password" />
        </div>

        <div>
            <label asp-for="ConfirmPassword">Повторіть пароль</label><br />
            <input asp-for="ConfirmPassword"  required />
            <span asp-validation-for="ConfirmPassword" />
        </div>

        <div>
            <label asp-for ="Is_manager_checked">Ви менеджер?</label><br />
            <input asp-for ="Is_manager_checked" type="checkbox" name="Is_manager_checked" value="true">

        </div>


        <div>
            <input type="submit" value="Регістрація" />
        </div>

    </div>
</form>